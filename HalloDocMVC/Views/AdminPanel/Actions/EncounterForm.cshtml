@{
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}
@model HalloDocMVC.DBEntity.ViewModels.AdminPanel.EncounterFormModel
@using static HalloDocMVC.DBEntity.ViewModels.AdminPanel.Constant
<div class="container mt-4">
    <div class="row">
        <div class="col-6">
            <h4><strong>Encounter Form</strong></h4>
        </div>
        <div class="col-6 ms-auto">
            <a class="relogin ms-auto" asp-controller="Dashboard" asp-action="Index"><button class="relogin shadow-none bg-white">Back</button></a>
        </div>
    </div>
    <div class="row min-vh-100">
        <div class="card">
            <div class="card-header align-self-center border-0">
                <h3><strong class="text-info">Medical Report-Confidential</strong></h3>
            </div>
            <div class="card-body border-0">
                <form method="post" asp-controller="" asp-action="" asp-route-RequestID="">
                    <input type="hidden" asp-for="RequestID" />
                    <div class="row">
                        <div class="col form-floating  space">
                            <input asp-for="FirstName" type="text" class="form-control shadow-none" id="fname" placeholder="First Name">
                            <label class="ms-2" for="fname"> First Name</label>
                        </div>
                        <div class="col form-floating  space">
                            <input asp-for="LastName" type="text" class="form-control shadow-none " id="lname" placeholder="Last Name">
                            <label class="ms-2" for="lname">Last Name</label>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col form-floating">
                            <input asp-for="Location" type="text" class="form-control shadow-none" id="location" placeholder="Location">
                            <label class="ms-2" for="location">Location</label>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-6 form-floating  space">
                            <input asp-for="DateOfBirth" type="date" class="form-control shadow-none" id="dob" placeholder="Date Of Birth">
                            <label class="ms-2" for="dob">Date Of Birth</label>
                        </div>
                        <div class="col-6 form-floating  space">
                            <input @*asp-for=""*@ type="date" class="form-control shadow-none" id="currentDate" placeholder="Date">
                            <label class="ms-2" for="currentDate">Date</label>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-6 ">
                            <div class="d-flex form-floating  space" style="height:100%;">
                                <input asp-for="PhoneNumber" class="form-control shadow-none inputs" type="tel" id="phones" placeholder="(201) 555-0123" />
                                <label class="ms-2" for="tel">Phone Number</label>
                            </div>
                        </div>
                        <div class="col-6 form-floating  space">
                            <input asp-for="Email" type="email" class="form-control shadow-none inputs" id="email" placeholder="Email">
                            <label class="ms-2" for="emailid"> Email</label>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="history" style="height: 100px" placeholder="History Of Present Illness or Injury"></textarea>
                                <label for="history">History Of Present Illness or Injury</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="medicalHistory" style="height: 100px" placeholder="Mdeical History"></textarea>
                                <label for="medicalHistory">Medical History</label>
                            </div>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="medications" style="height: 100px" placeholder="Medications"></textarea>
                                <label for="medications">Medications</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="allergies" style="height: 100px" placeholder="Allergies"></textarea>
                                <label for="allergies">Allergies</label>
                            </div>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-4 form-floating ">
                            <div class="d-flex form-floating" style="height:100%;">
                                <input @*asp-for=""*@ class="form-control shadow-none" id="temp" placeholder="Temp" />
                                <label class="ms-2" for="temp">Temp</label>
                            </div>
                        </div>
                        <div class="col-4 form-floating">
                            <input @*asp-for="" *@ class="form-control shadow-none" id="hr" placeholder="HR">
                            <label class="ms-2" for="hr"> HR</label>
                        </div>
                        <div class="col-4 form-floating">
                            <input @*asp-for="" *@ class="form-control shadow-none" id="rr" placeholder="RR">
                            <label class="ms-2" for="rr"> RR</label>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-2 form-floating ">
                            <div class="d-flex form-floating" style="height:100%;">
                                <input @*asp-for=""*@ class="form-control shadow-none" id="bpS" placeholder="Blood Pressure(S..)" />
                                <label class="ms-2" for="bpS">Blood Pressure(S..)</label>
                            </div>
                        </div>
                        <div class="col-2 form-floating ">
                            <div class="d-flex form-floating" style="height:100%;">
                                <input @*asp-for=""*@ class="form-control shadow-none" id="bpD" placeholder="Blood Pressure(D..)" />
                                <label class="ms-2" for="bpD">Blood Pressure(D..)</label>
                            </div>
                        </div>
                        <div class="col-4 form-floating">
                            <input @*asp-for="" *@ class="form-control shadow-none" id="oxygen" placeholder="O2">
                            <label class="ms-2" for="oxygen"> O2</label>
                        </div>
                        <div class="col-4 form-floating">
                            <input @*asp-for="" *@ class="form-control shadow-none" id="pain" placeholder="Pain">
                            <label class="ms-2" for="pain"> Pain</label>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="heent" style="height: 100px" placeholder="Heent"></textarea>
                                <label for="heent">Heent</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="cv" style="height: 100px" placeholder="CV"></textarea>
                                <label for="cv">CV</label>
                            </div>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="chest" style="height: 100px" placeholder="Chest"></textarea>
                                <label for="chest">Chest</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="abd" style="height: 100px" placeholder="ABD"></textarea>
                                <label for="abd">ABD</label>
                            </div>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="extr" style="height: 100px" placeholder="Extr"></textarea>
                                <label for="extr">Extr</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="skin" style="height: 100px" placeholder="Skin"></textarea>
                                <label for="skin">Skin</label>
                            </div>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="neuro" style="height: 100px" placeholder="Neuro"></textarea>
                                <label for="neuro">Neuro</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="other" style="height: 100px" placeholder="Other"></textarea>
                                <label for="other">Other</label>
                            </div>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="diagnosis" style="height: 100px" placeholder="Diagnosis"></textarea>
                                <label for="diagnosis">Diagnosis</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="treatment" style="height: 100px" placeholder="Treatment Plan"></textarea>
                                <label for="treatment">Treatment Plan</label>
                            </div>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="medicDispensed" style="height: 100px" placeholder="Medications Dispensed"></textarea>
                                <label for="medicDispensed">Medications Dispensed</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="other" style="height: 100px" placeholder="Other"></textarea>
                                <label for="other">Other</label>
                            </div>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col">
                            <div class="form-floating mb-3">
                                <textarea class="form-control shadow-none" id="followup" style="height: 100px" placeholder="Follow Up"></textarea>
                                <label for="followup">Follow Up</label>
                            </div>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="d-flex justify-content-end">
                            <input type="submit" class="bg-info border border-outline-info text-white rounded-2 submission text-white" @*onclick="model_case(@Model.RequestId)" *@value="Save Changes">
                            <a @*asp-controller="actions" asp-action="ViewNotes"*@ class="btn text-white rounded-2 text-white ms-2" id="finalize">Finalize</a>
                            <a asp-controller="dashboard" asp-action="Index" class="btn bg-white border border-info rounded-2 text-info ms-2">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>