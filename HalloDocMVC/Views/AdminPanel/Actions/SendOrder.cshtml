@{
    Layout = "_Layout";
}
<div class="container ">
    <div class="m-4">
        <div class="d-flex justify-content-between">
            <h4><b>Send Order</b></h4>
            <div class="">
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-info">< Back</a>
            </div>
        </div><br/>
        <div class="card">
            <form>
                <input type="hidden">
                    <div class="row d-flex m-2 mt-2">
                        <div class="col form-floating ">
                            <select name="profession" class="form-select form-control shadow-none mb-1" id="profession" required data-allow-clear="true" tabindex="-1" @*onchange="myFunction()" asp-items="@(new SelectList(ViewBag.ComboBoxRegion, "RegionId", "RegionName"))"*@>
                                <option class="mb-2">Select Profession</option>
                            </select>
                            <label for="profession"></label>
                        </div>
                        <div class="col form-floating ">
                            <input @*asp-for="Business"*@ type="text" class="form-control shadow-none" id="bname" placeholder="Business">
                            <label class="ms-2" for="bname">Business</label>
                        </div>
                    </div><br/>
                    <div class="row d-flex m-2">
                        <div class="col form-floating ">
                            <input @*asp-for="Business"*@ type="text" class="form-control shadow-none" id="bcontact" placeholder="Business">
                            <label class="ms-2" for="bcontact">Business Contact</label>
                        </div>
                        <div class="col form-floating ">
                            <input @*asp-for="Business"*@ type="text" class="form-control shadow-none" id="email" placeholder="Business">
                            <label class="ms-2 " for="email">Email</label>
                        </div>
                    </div><br/>
                    <div class="row d-flex m-2">
                        <div class="col-6 form-floating ">
                            <input @*asp-for="Business"*@ type="text" class="form-control shadow-none" id="faxNumber" placeholder="Business">
                            <label class="ms-2" for="faxNumber">Fax Number</label>
                        </div>
                    </div><br />
                    <div class="row form-floating  mx-2">
                            <textarea name="Notes" class="form-control shadow-none mx-2 " id="prescription" style="height: 100px"></textarea>
                            <label for="prescription">Prescription or Order Details</label>
                    </div><br />
                    <div class="row d-flex m-2">
                        <div class="col-6 form-floating">
                            <select name="refill" class="form-select form-control shadow-none mb-1" id="refill" required data-allow-clear="true" tabindex="-1" @*onchange="myFunction()" asp-items="@(new SelectList(ViewBag.ComboBoxRegion, "RegionId", "RegionName"))"*@>
                                <option class="mb-2">Not Required</option>
                            </select>
                            <label class="ms-2 " for="refill">No. of Refill</label>
                        </div>
                    </div>
                <div class="d-flex justify-content-end ">
                    <button type="submit" class="btn btn-info text-white shadow-none m-1">Submit</button>
                    <button type="button" class="btn border border-info text-info shadow-none m-1" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>